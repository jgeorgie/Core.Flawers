@model IEnumerable<Flaw.Models.PrivilegeModel>
@{
    ViewData["Title"] = "Notifications";
}
<h2>Նախազգուշացումներ արտոնագրերի ավարտի մասին</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivilegeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            @*@if (Context.User.Identity.Name == "admin@admin.am")
            {
                <th></th>
            }*@

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrivilegeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                @*@if (Context.User.Identity.Name == "admin@admin.am")
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Խմբագրել</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Մանրամասներ</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Ջնջել</a>
                    </td>
                }*@

            </tr>
        }
    </tbody>
</table>
