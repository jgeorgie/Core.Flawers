@model Flaw.Models.PendingPaymentModel

@{
    ViewData["Title"] = "Details";
}

<style>
    #paymentsContainer{
        max-width:900px;
    }
</style>

<h2>Details</h2>

<div>
    <h4>PendingPaymentModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PaymentDeadline)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PaymentDeadline)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <div id="paymentsContainer">

    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a href="#"><span id="get_payments">Get Payments</span></a> |
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script>
        $(function () {
            var url = window.location.href;
            var index = url.lastIndexOf('/');
            var pId = url.substring(index + 1);
            $("#get_payments").click(function () {
                $.ajax({
                    method: "GET",
                    url: '@Url.Action("GetPayments")',
                    data: { id: pId },
                    success: function (result) {
                        $("#paymentsContainer").html(result);
                    }
                });
            });
        })
    </script>
}
