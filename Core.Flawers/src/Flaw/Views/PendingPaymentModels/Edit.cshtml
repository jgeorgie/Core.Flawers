@model Flaw.Models.PendingPaymentModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>PendingPaymentModel</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Amount" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MembershipFeeForeignKey" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="MembershipFeeForeignKey" class="form-control" asp-items="ViewBag.MembershipFeeForeignKey"></select>
                <span asp-validation-for="MembershipFeeForeignKey" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PaymentDeadline" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PaymentDeadline" class="form-control" />
                <span asp-validation-for="PaymentDeadline" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Status" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<PaymentStatus>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
